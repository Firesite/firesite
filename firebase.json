{
	"hosting": {
		"public": "functions/static",
		"rewrites": [
			{
				"source": "**",
				"function": "ssr"
			}
		]
	},
	"firestore": {
		"rules": "firestore.rules",
		"indexes": "firestore.indexes.json"
	},
	"functions": {
		"source": "functions"
	},
	"emulators": {
		"functions": {
			"port": 5001
		},
		"firestore": {
			"port": 8080
		}
	}
}
